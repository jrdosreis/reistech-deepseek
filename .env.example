# ============================================================================
# REISTECH-DEEPSEEK - CONFIGURAÇÃO DOCKER COMPOSE (RAIZ)
# ============================================================================
# Este arquivo é usado pelo docker-compose.yml para configurar todos os serviços
# Copie para .env e ajuste as credenciais reais
# IMPORTANTE: O arquivo .env real NUNCA deve ser commitado (está no .gitignore)

APP_NAME=Reistech
APP_VERSION=1.0.0
LOG_LEVEL=debug
NODE_ENV=development
API_PREFIX=/api
PORT=3000

# PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=reistechdb
DB_USER=reistechuser
DB_PASSWORD=your-secure-password-here
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-64-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-64-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# Admin
ADMIN_EMAIL=contato@reiscelulares.com.br
ADMIN_PASSWORD=admin@reiscelulares
ADMIN_NAME=Junior Reis

# SMTP Hostinger
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=contato@reiscelulares.com.br
SMTP_PASSWORD=your-smtp-password-here
SMTP_FROM=Reistech <contato@reiscelulares.com.br>

# CORS e Domínios
# Para desenvolvimento local, use localhost
# Para Docker remoto (ex: Windows), use o IP da máquina (ex: 192.168.100.232)
API_DOMAIN=http://192.168.100.232:3000
WEB_DOMAIN=http://192.168.100.232
ACME_EMAIL=contato@reiscelulares.com.br
CORS_ORIGIN=http://localhost,http://192.168.100.232,http://127.0.0.1

# WhatsApp
WHATSAPP_SESSION_PATH=./whatsapp-sessions
WHATSAPP_PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox

# Uploads
UPLOAD_PATH=./uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Backup
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_ENABLED=true

# Timezone
TZ=America/Sao_Paulo
