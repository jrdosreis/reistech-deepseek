{
  "name": "reistech-backend",
  "version": "1.0.0",
  "description": "Backend do sistema ReisTech - Motor de atendimento multi-nicho",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --config jest.config.js",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:watch": "jest --config jest.config.js --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src/**/*.js",
    "migrate": "node-pg-migrate",
    "migrate:create": "node-pg-migrate create",
    "seed": "node src/db/seeds/runner.js",
    "db:reset": "npm run migrate down && npm run migrate up && npm run seed"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "fsm",
    "multi-tenant",
    "nodejs"
  ],
  "author": "ReisTech Team",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "cpf-cnpj-validator": "^1.0.3",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^6.15.0",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.4.1",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.4.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "natural": "^6.12.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "pg-promise": "^11.5.4",
    "qrcode": "^1.5.3",
    "qrcode-terminal": "^0.12.0",
    "redis": "^4.7.1",
    "sequelize": "^6.37.5",
    "uuid": "^9.0.0",
    "validator": "^13.15.26",
    "whatsapp-web.js": "^1.22.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "node-pg-migrate": "^6.2.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {}
