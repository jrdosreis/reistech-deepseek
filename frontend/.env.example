# ============================================
# REISTECH FRONTEND - VARIÁVEIS DE AMBIENTE
# ============================================

# URLs do Backend API
# Para desenvolvimento local (macOS): localhost:3001
# Para Windows na rede: 192.168.100.232:3001 (exemplo)
# Para produção: https://api.seu-dominio.com

VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Informações da Aplicação
VITE_APP_NAME=Reistech
VITE_APP_VERSION=1.0.0

# Modo de Debug (verdadeiro para mais logs)
VITE_DEBUG=false

# Timeout das requisições (ms)
VITE_REQUEST_TIMEOUT=30000

# Máximo de tentativas de reconexão WebSocket
VITE_WS_MAX_RETRIES=5

# Intervalo entre tentativas (ms)
VITE_WS_RETRY_INTERVAL=3000
